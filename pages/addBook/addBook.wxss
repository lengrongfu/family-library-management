/* Add Book page layout styles */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 20px;
  background-color: #f5f5f5;
}

.input-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10px;
}

label {
  flex: 0 0 80px;
  font-size: 16px;
  color: #333333;
}

input {
  flex: 1 1 auto;
  padding: 10px;
  font-size: 16px;
  color: #333333;
  border: 1px solid #e0e0e0;
  border-radius: 5px;
}

button {
  flex: 0 0 auto;
  margin-left: 10px;
  padding: 10px;
  font-size: 16px;
  color: #ffffff;
  background-color: #007aff;
  border: none;
  border-radius: 5px;
}
