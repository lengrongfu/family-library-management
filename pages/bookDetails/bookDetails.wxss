/* Book Details page layout styles */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 20px;
  background-color: #f5f5f5;
}

.detail-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10px;
}

label {
  flex: 0 0 80px;
  font-size: 16px;
  color: #333333;
}

text {
  flex: 1 1 auto;
  font-size: 16px;
  color: #333333;
}

button {
  flex: 0 0 auto;
  margin-top: 20px;
  padding: 10px;
  font-size: 16px;
  color: #ffffff;
  background-color: #007aff;
  border: none;
  border-radius: 5px;
}
