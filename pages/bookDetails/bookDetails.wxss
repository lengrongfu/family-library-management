/* Book Details page layout styles */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 20px;
  background-color: #ffffff;
}

.top-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  background-color: #ffffff;
  border-bottom: 1px solid #e0e0e0;
}

.time {
  font-size: 16px;
  color: #333333;
}

.title {
  font-size: 20px;
  font-weight: bold;
  color: #333333;
}

.icons {
  display: flex;
  flex-direction: row;
}

.icon {
  width: 24px;
  height: 24px;
  margin-left: 10px;
}

.detail-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10px;
}

label {
  flex: 0 0 80px;
  font-size: 16px;
  color: #333333;
}

text {
  flex: 1 1 auto;
  font-size: 16px;
  color: #333333;
}

button {
  flex: 0 0 auto;
  margin-top: 20px;
  padding: 10px;
  font-size: 16px;
  color: #ffffff;
  background-color: #007aff;
  border: none;
  border-radius: 5px;
}
