/* Search Book page layout styles */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 20px;
  background-color: #ffffff;
}

.top-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  background-color: #ffffff;
  border-bottom: 1px solid #e0e0e0;
}

.time {
  font-size: 16px;
  color: #333333;
}

.title {
  font-size: 20px;
  font-weight: bold;
  color: #333333;
}

.icons {
  display: flex;
  flex-direction: row;
}

.icon {
  width: 24px;
  height: 24px;
  margin-left: 10px;
}

.search-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10px;
  background-color: #f5f5f5;
  border-bottom: 1px solid #e0e0e0;
}

.search-input {
  flex: 1;
  padding: 10px;
  font-size: 16px;
  color: #333333;
  border: 1px solid #e0e0e0;
  border-radius: 5px;
}

.search-icon {
  width: 24px;
  height: 24px;
  margin-left: 10px;
}

.search-group,
.filter-group,
.sort-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10px;
}

label {
  flex: 0 0 80px;
  font-size: 16px;
  color: #333333;
}

input {
  flex: 1 1 auto;
  padding: 10px;
  font-size: 16px;
  color: #333333;
  border: 1px solid #e0e0e0;
  border-radius: 5px;
}

button {
  flex: 0 0 auto;
  margin-left: 10px;
  padding: 10px;
  font-size: 16px;
  color: #ffffff;
  background-color: #007aff;
  border: none;
  border-radius: 5px;
}

.search-results {
  flex: 1 1 auto;
  overflow-y: auto;
  margin-top: 10px;
}

.result-item {
  display: flex;
  flex-direction: column;
  padding: 10px;
  margin-bottom: 10px;
  background-color: #ffffff;
  border: 1px solid #e0e0e0;
  border-radius: 5px;
}

.result-title {
  font-size: 18px;
  font-weight: bold;
  color: #333333;
}

.result-author {
  font-size: 14px;
  color: #666666;
}

.result-price {
  font-size: 14px;
  color: #666666;
}
